<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <!-- 定义属性 -->
    <property name="LOG_PATH" value="logs"/>
    <property name="LOG_FILE" value="rookie-blog"/>
    <property name="CONSOLE_LOG_PATTERN" value="%d{HH:mm:ss.SSS} %highlight(%-5level) [%8.8thread] %cyan(%-30logger{30}): %msg%n"/>
    <property name="FILE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>

    <!-- 控制台输出 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 文件输出 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${LOG_FILE}.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${LOG_FILE}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- ============================================
         精确控制不同包的日志级别
         ============================================ -->

    <!-- 1. MyBatis 核心包：设置为 WARN，只显示警告和错误 -->
    <logger name="org.apache.ibatis" level="WARN"/>

    <!-- 2. MyBatis Spring 集成包：设置为 WARN -->
    <logger name="org.mybatis" level="WARN"/>
    <logger name="org.mybatis.spring" level="WARN"/>

    <!-- 3. Spring 事务相关：设置为 WARN -->
    <logger name="org.springframework.transaction" level="WARN"/>
    <logger name="org.springframework.jdbc" level="WARN"/>

    <!-- 4. JDBC 相关：设置为 WARN -->
    <logger name="java.sql" level="WARN"/>
    <logger name="java.sql.Connection" level="WARN"/>

    <!-- 5. 数据库连接池：设置为 INFO -->
    <logger name="com.zaxxer.hikari" level="INFO"/>

    <!-- 6. 你自己的应用包：设置为 DEBUG 或 INFO -->
    <logger name="com.lx.blog" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- 7. Spring 框架包：设置为 INFO -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.springframework.web" level="INFO"/>

    <!-- 根日志记录器 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>